Config { font         = "xft:PragmataPro Mono:pixelsize=14"
       , bgColor      = "black"
       , fgColor      = "grey"
       , position     = Top
       , lowerOnStart = True
       , persistent   = True
       , commands = [ Run StdinReader

                    , Run Uptime
                        ["-t", "<days>d"]
                        864000

                    , Run MultiCpu
                        ["-t", "<autovbar>",
                         "-L", "25",
                         "-H", "75",
                         "-l", "green",
                         "-n", "yellow",
                         "-h", "red"]
                        10

                    , Run DiskIO
                        [("/", "<read>/<write>")]
                        []
                        10

                    , Run Memory
                        ["-t", "<usedratio>",
                         "-L", "33",
                         "-H", "66",
                         "-l", "green",
                         "-n", "yellow",
                         "-h", "red"]
                        10

                    , Run ThermalZone
                        0
                        ["-t", "<temp>°",
                         "-L", "50",
                         "-H", "70",
                         "-l", "green",
                         "-n", "yellow",
                         "-h", "red"]
                        10

                    , Run ThermalZone
                        1
                        ["-t", "<temp>°",
                         "-L", "50",
                         "-H", "70",
                         "-l", "green",
                         "-n", "yellow",
                         "-h", "red"]
                        10

                    , Run Volume "default" "Master"
                        ["-t", "<volumevbar> ♫"]
                        10

                    , Run Wireless "wlp4s0"
                        ["-t", "<fc=white><essid></fc> <qualityvbar>",
                         "-l", "red",
                         "-n", "yellow",
                         "-h", "green"]
                        10

                    , Run DynNetwork
                        [ "-t", "<rx>↓<tx>↑" ]
                        10

                    , Run PipeReader
                        "/tmp/xmobar-wireguard.fifo"
                        "wg"

                    , Run Battery
                        ["-t", "<left>%<leftipat> (<timeleft>)",
                         "--",
                         "-L", "15",
                         "-H", "80",
                         "-l", "red",
                         "-m", "yellow",
                         "-h", "green",
                         "--on-icon-pattern", "↑",
                         "--off-icon-pattern", "↓"]
                        600

                    , Run Date "%a %b %_d %l:%M" "date" 600
                    ]
       , alignSep = "}{"
       , template = "%StdinReader% }{ %uptime% | %multicpu% | %thermal0% %thermal1% | %memory% | %diskio% | %default:Master% | %wlp4s0wi% %wg% %dynnetwork% | %battery% | <fc=orange>%date%</fc>"
       }
